#!/bin/sh
# Importing variables and functions from prompt.sh
if [[ -f ../prompt.sh ]]; then # TODO remove prompt.sh. Currently it has only one poorly written function to check internet connection.
    source '../prompt.sh'
else
echo 'Error: Failed to locate prompt.sh'
    exit 1
fi
if prompt "install Tiger intrusion detection suite?" then
	echo "Updating package resources"
	apt-get update
	apt-get dist-upgrade
	echo "Preparing to install Tiger intrusion detection framework"
	apt-get install tiger
	clear scr
	echo "Tiger setup complete"
fi
