#!/bin/sh
# Importing variables and functions from prompt.sh
if [[ -f ../prompt.sh ]]; then # TODO remove prompt.sh. Currently it has only one poorly written function to check internet connection.
    source '../prompt.sh'
else
echo 'Error: Failed to locate prompt.sh'
    exit 1
fi
echo "Updating package resources"
apt-get update
if prompt "Install packaging tools?" then
	apt-get install build-essential debhelper cdbs dh-make diffutils patch gnupg fakeroot lintian devscripts pbuilder dpatch dput quilt
	clear scr
fi
if prompt "Install packaging tools?" then
	sudo apt-get install valac
	clear scr
fi
if prompt "Install packaging tools?" then
	sudo apt-get install anjuta
	clear scr
fi

